<h2>Edit product</h2>
<form action="/products/<%=@product[:id]%>/update" method="post">
  <div class="form-group">
    <label>Name:</label>
    <input autocomplete="off" class="text" type="text" name="name" id="name" value="<%=@product[:name]%>">
  </div>
  <div class="form-group">
    <label>Value:</label>
    <input autocomplete="off" class="text" type="number" name="value" id="value" value="<%=@product[:value]%>">
  </div>
  <div class="form-group">
    <label>Brand:</label>
    <input autocomplete="off" class="text" type="text" name="brand" id="brand" value="<%=@product[:brand]%>">
  </div>
  <div class="form-group">
    <label>Description:</label> <br>
    <textarea name="description" id="description"><%=@product[:description]%></textarea>
  </div>
  <div class="form-group">
    <label>Quantity:</label>
    <input autocomplete="off" class="text" type="number" name="quantity" id="quantity" value="<%=@product[:quantity]%>">
  </div>
  <div class="form-group">
    <input class="button" type="hidden" name="_method" value="put">
    <input class="button" type="submit" name="update" value="Update">
    <button><a class="button" href="/products/<%=@product[:id]%>">Back</a></button>
  </div>
</form>